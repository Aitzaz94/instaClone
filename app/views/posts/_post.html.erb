<div id="<%= dom_id post %>" class="post-container">
  <p>
    <%# <strong>Title:</strong> %>
    <%#= post.title %>
  </p>

  <p>
    <%# <strong>Description:</strong> %>
    <%#= post.description %>
  </p>

  <p>
    <%# <strong>Keywords:</strong> %>
    <%#= post.keywords %>
  </p>

  <p>
    <%#= post.user.email %>
  </p>

  <p>
    <%= link_to "", post, class:"post-link", style:"z-index;" %>
  </p>

  <% post.images.each do |image| %>
    <%= image_tag(image, style: "object-fit: cover; width: 200px; height: 600px;") %>
  <% end %>
  <p>
    <%= post.title %>
  </p>

</div>

  <p>
    <%= link_to post.user.email, post.user, style:"z-index;" %>
  </p>
